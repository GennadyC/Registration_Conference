@model TomskNipi.Models.Sections
@{
    ViewBag.Title = "Добавление секции";
}

@if (User.Identity.IsAuthenticated)
{
<form asp-action="Create" asp-controller="Conference">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название секции</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="City" class="control-label">Город</label>
        <input type="text" asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Location" class="control-label">Улица</label>
        <input type="text" asp-for="Location" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>
</form>
}
else
{
    <p>Просмотр не доступен без авторизации</p><br />
    <a asp-controller="Account" asp-action="Login">Вход</a>
    <a asp-controller="Account" asp-action="Register">Регистрация</a>
}